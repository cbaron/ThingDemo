.Sidebar
    background-color: #364150
    displayFlex()
    flex(1)
    flex-direction: column
    height: 100%
    overflow: hidden
    transition: 350ms ease-in-out all

    &.minimize
        flex(none)
        width: 4rem

        img,
        input,
        .title,
        span.label
            left: -10rem
            opacity: 0
            position: absolute

        svg
            margin: auto

            &.search
                cursor: pointer

    .header
        background-color: #eee
        display: block
        height: 4rem
        padding: .5rem

        img
            display: inline-block
            transition: 350ms ease-in-out all

        svg
            cursor: pointer
            float: right
            height: 1rem
            margin-top: 1rem
            stroke: #5F8295

    .searchWrap
        background-color: #2a323e
        padding: .5rem

        input
            background-color: transparent
            border: none
            border-radius: 3px
            box-shadow: none
            color: #5b5b60
            display: block
            float: left
            height: 2rem
            font-family: Raleway
            font-size: .75rem
            padding: .5rem
            transition: .3s ease-in-out all
            width: 85%

            +placeholder()
                color #c2c2c5
                opacity 0.3
            
            &:focus
                background-color: white
            
                +placeholder()
                    opacity: 1

        svg
            display: block
            float: left
            height: 1rem
            margin-top: .5rem
            opacity: 0.3
            stroke: white
            width: 15%

    .title
        color: rgba(255, 255, 255, 0.3)
        font-size: .5rem
        letter-spacing: .2px
        padding: 1rem
        text-transform: uppercase

    ul
        background-color: #364150
        font-weight: 300
        font-size: .85rem
        line-height: 2rem
        overflow-y: scroll

        li
            background-color: #2C3541
            border-bottom: 1px #394557 solid
            cursor: pointer
            display: flex
            padding: 1rem .5rem
            transition: background-color .3s linear
            transition: width .3s ease-in-out

            svg
                fill: rgba(255, 255, 255, 0.8)
                float: left
                height: 1.25rem
                width: 1.25rem
                margin: 0 .5rem
                

            .label
                color: rgba(255, 255, 255, 0.5)
                display: inline-block
                line-height: 1.5rem
                margin: 0 .5rem

            &:hover
                background-color: #222932

            &.selected
                background-color: #81B441

                .label
                    color: white
                svg
                    fill: white
