.Header
    background-color: $darkBlue
    color: white
    font-size: .75rem
    line-height: 1rem
    height: 4rem
    padding: 0rem 2rem

    .accountUi
        cursor: pointer
        float: right
        padding: 1rem
        text-align: center

        &:hover
            background-color: $darkerBlue

        svg
            fill: none
            height: .5rem
            stroke: $lightBlue

        .menu
            background-color: #2B3034
            border: 1px solid #1A1C1E
            border-radius: 0
            display: none
            margin: 1rem 0rem
            min-width: 6rem
            position: absolute
            right: 2rem
            z-index: 1000
            
            div.showing &
                background-color: $darkerBlue

            li
                border-bottom-color: #1A1C1E
                color: #FFF
                font-size: 12px
                font-weight: 300
                margin: 0
                padding: 8px 8px 6px
                border-bottom-width: 1px
                border-bottom-style: solid
                white-space: normal
                display: block

                &:hover
                    background-color: #212326
        
        &.showing
            background-color: $darkerBlue

            .menu
                display: block
