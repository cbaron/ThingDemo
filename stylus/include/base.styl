html
    font-size: 100%
    height: 100%
    
*,
*::before,
*::after
    box-sizing: border-box

body 
    height: 100%
    font-family: Lato
    font-size: 1rem
    font-weight: 400
    line-height: 1.5
    
h1, h2, h3, h4, h5, h6
    margin-top: 0
    margin-bottom: .5rem
    font-weight: 500
    line-height: 1.2
    letter-spacing: 1px
    color: #555
    
p
    margin-top: 0
    margin-bottom: 1rem
    
ul, li
    list-style-type: none
    padding: 0
    margin: 0
    -webkit-margin-start: 0rem
    -webkit-margin-end: 0rem
    -webkit-margin-before: 0rem
    -webkit-margin-after: 0rem
    
input,
button,
select,
textarea
    margin: 0
    border-radius: 0
    
input, select, button
    &:focus
        outline: 0

#content
    height: 100%

.hide
    opacity: 0
    transition: all 1s ease-in-out

.hidden
    display: none !important

.clearfix 
    display: inline-block

    &:after
        visibility: hidden
        display: block
        font-size: 0
        content: " "
        clear: both
        height: 0
    
* html .clearfix
    height: 1%

.clearfix 
    display: block

.button-row
    text-align: center

div.upload,
button
    background-color: white
    border: 1px solid
    border-color: transparent
    border-radius: .3rem
    box-shadow: 0 2px 3px #999
    cursor: pointer
    display: inline-block
    padding: .5rem 1rem
    margin: 0rem 1rem;

    &:hover
        color: lightgrey

button.add
    background-image: url(/static/img/plus.svg);
    background-repeat: no-repeat;
    background-color: transparent;
    border: none;
    box-shadow: none;
    height: 2rem;
    width: 2rem;
    padding: 0px;

button.edit
    background-image: url(/static/img/edit.svg);
    background-repeat: no-repeat;
    background-color: transparent;
    border: none;
    box-shadow: none;
    height: 2rem;
    width: 2rem;
    padding: 0px;

button.delete
    background-image: url(/static/img/ex.svg);
    background-repeat: no-repeat;
    background-color: transparent;
    border: none;
    box-shadow: none;
    height: 2rem;
    width: 2rem;
    padding: 0px;


.upload
    font-size: .75rem
    margin-left: 0px
    position: relative
    overflow: hidden
    width: initial !important

    &.has-spinner
        color: transparent

    &:hover 
        cursor: pointer

    span
        &:hover
            cursor: pointer

    input[type=file]
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        opacity: 0
        margin: 0

        &:hover
            cursor: pointer

img.preview
    display: inline-block;
    width: 80%;
