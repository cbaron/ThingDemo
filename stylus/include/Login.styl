.Login
    margin-left: 33%
    margin-top: 5%
    width: 33%

    >div:first-child
        padding: 0px 1rem
    
    >div:nth-child(2)
        background-color: white
        border-radius: 5px
        margin: 1rem
        padding: 2rem 1rem 1rem 1rem
        position: relative

    .heading
        background-color: white
        color: $formBlue
        font-family: Lato
        left: 2rem
        margin-top: -.75rem
        position: absolute
        padding: 0px 5px

    .form-box
        border: 1px solid $borderGrey
        border-radius: 5px
        margin-bottom: 1rem
        padding: 1.75rem 1.5rem
    
    .form-group
        position: relative

    .prompt
        font-size: .75rem
    
    input
        background-color: rgb(250, 255, 189)
        border: 1px solid $inputBorderGrey
        font-family: Raleway
        font-size: .75rem
        padding: .5rem 0 .5rem 30px
        margin: 1rem 0px
        width: 100%

    svg
        fill: $formBlue
        position: absolute
        height: .75rem
        width: .5rem

        &.lock,
        &.user
            top: 1.6rem
            left: .75rem

        &.arrow
            fill: white
            right: .5rem
            top: .6rem

    button
        background-color: $formBlue
        color: white;
        cursor: pointer
        float: right
        font-size: .8rem
        margin: 0px
        position: relative

        &.submitting
            background-color: $submittingBlue

        span
            margin-right: .5rem

    .copyright
        font-size: .75rem
        text-align: center
