.Events
    background-color: white
    border-right: 15px solid $lightGrey
    float: left
    width: 75%
    
    > div:nth-child(2)
        height: 215px

    svg
        height: 100%
        width: 100%

        .y-axis
            .domain
                stroke: white

            line
                stroke: $lightGrey
                stroke-width: 2

        .x-axis
            font-size: .5rem

        .senet
            stroke: $senet

            &.area
                fill: $senet
                opacity: .1
        
        .machineq
            stroke: $machineq
            
            &.area
                fill: $machineq
                opacity: .1

