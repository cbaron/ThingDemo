.Overview
    background-color: #f7f7f8
    
    .user-data-row
        background-color: #75ade3
        margin: 1rem
        padding: .5rem
        text-align: center

        > div
            display: inline-block
            margin: 0 1rem

        .label
            color: #253c4f
            font-size: .85rem
            font-weight: bold
            text-transform: uppercase

        .value
            color: #e9e9e9
            font-family: Raleway
            font-weight: bold

    .graph-wrap
        margin 0 1rem 2rem 1rem
        
        .heading
            background-color: $grey
            color: #666
            font-family: Raleway
            font-size: 1rem
            font-weight: bold
            padding: .5rem 1rem

    .widgets
        displayFlex()        
